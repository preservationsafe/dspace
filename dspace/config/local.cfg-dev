##### File Storage ######

# Asset (bitstream) store number 0 (zero)
assetstore.dir = /opt/tomcat/assetstore

##### Hide Item Metadata Fields  #####
# Fields named here are hidden in the following places UNLESS the
# logged-in user is an Administrator:
#  1. XMLUI metadata XML view, and Item splash pages (long and short views).
#  2. JSPUI Item splash pages
#  3. RDF (every where as there is currently no possibility to authenticate)
#  4. OAI (every where as there is currently no possibility to authenticate)
#     Attention: You need to rebuild the OAI SOLR index after every change of
#     this property. Run [dspace-install]/bin/dspace oai import -c to do so.
#
# To designate a field as hidden, add a property here in the form:
#    metadata.hide.SCHEMA.ELEMENT.QUALIFIER = true
#
# This default configuration hides the dc.description.provenance field,
# since that usually contains email addresses which ought to be kept
# private and is mainly of interest to administrators:
metadata.hide.dc.description.provenance = true

# Allows custom metadata field dc.description.admin-note to be hidden
metadata.hide.dc.description.admin-note = true

#
# dspace.cfg over-rides support custom item meta-display
#
webui.itemdisplay.default = \
  dc.identifier.uri(link), \
  dc.title, \
  dc.title.alternative, \
  dc.contributor.author, \
  dc.contributor.department, \
  dc.date.issued(date), \
  dc.publisher, \
  dc.identifier.citation, \
  dc.identifier.journal, \
  dc.rights, \
  dc.description.collectioninformation, \
  dc.description.abstract, \
  dc.description, \
  dc.description.note, \
  dc.identifier.doi(doi), \
  dc.identifier.pmid(pmid), \
  dc.identifier.pmcid(pmcid), \
  dc.identifier.arxiv, \
  dc.identifier.issn, \
  dc.identifier.eissn, \
  dc.identifier.isbn, \
  dc.identifier.eisbn, \
  dc.subject, \
  dc.relation.ispartofseries, \
  dc.type, \
  dc.eprint.version, \
  dc.description.sponsorship, \
  dc.relation.url(link)
  
# render identifiers as resolvable links
webui.resolver.1.urn = doi
webui.resolver.1.baseurl = http://dx.doi.org/
webui.resolver.2.urn = pmid
webui.resolver.2.baseurl = https://www.ncbi.nlm.nih.gov/pubmed/
webui.resolver.3.urn = pmcid
webui.resolver.3.baseurl = https://www.ncbi.nlm.nih.gov/pmc/

##### Settings for Submission Process #####

# Whether or not we REQUIRE that a file be uploaded
# during the 'Upload' step in the submission process
# Defaults to true; If set to 'false', submitter has option to skip upload
webui.submit.upload.required = false
