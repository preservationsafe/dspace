##### Basic information ######

# DSpace installation directory
dspace.dir = /opt/tomcat/dspace/dspace-install

# DSpace host name - should match base URL.  Do not include port number.
dspace.hostname = localhost

# DSpace base host URL.  Include port number etc.
dspace.baseUrl = http://localhost:8080

# DSpace base URL.  Include port number etc., but NOT trailing slash
# Change to xmlui if you wish to use the xmlui as the default, or remove
# "/jspui" and set webapp of your choice as the "ROOT" webapp in
# the servlet engine.
dspace.url = http://localhost:8080/jspui

# Optional: DSpace URL for mobile access
#dspace.mobileUrl = http://mobile.example.com

# Name of the site
dspace.name = University of Arizona Library TESS

# Default language for metadata values
default.language = en_US

