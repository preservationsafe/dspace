# For UAL, local.cfg is generated by our Ant build.
# So don't edit local.cfg directly; you'll lose your changes on the next build.
# Edit build.properties to change environment-specific things.
# Edit local.cfg.EXAMPLE, commit, and push to change things for all environments.

## General settings
dspace.dir = @DSPACE_DIR@
dspace.ui = jspui
dspace.hostname = @DSPACE_HOSTNAME@
dspace.baseUrl = @DSPACE_BASEURL@
dspace.url = @DSPACE_URL@
dspace.name = @DSPACE_NAME@
assetstore.dir = @ASSETSTORE_DIR@

## Database settings

db.url = @DB_URL@
db.username = @DB_USER@
db.password = @DB_PASSWORD@

## Email settings

mail.server = @MAIL_SERVER@
mail.from.address = @MAIL_FROM@
feedback.recipient = @MAIL_ADMIN@
mail.admin = @MAIL_ADMIN@
alert.recipient = @MAIL_ADMIN@
registration.notify = @MAIL_ADMIN@

## Metadata display

# Allows custom metadata field dc.description.admin-note to be hidden
metadata.hide.dc.description.admin-note = true

webui.itemdisplay.default = \
  dc.identifier.uri(link), \
  dc.title, \
  dc.title.alternative, \
  dc.contributor.author, \
  dc.contributor.department, \
  dc.date.issued(date), \
  dc.publisher, \
  dc.identifier.citation, \
  dc.identifier.journal, \
  dc.rights, \
  dc.description.collectioninformation, \
  dc.description.abstract, \
  dc.description, \
  dc.description.note, \
  dc.identifier.doi(doi), \
  dc.identifier.pmid(pmid), \
  dc.identifier.pmcid(pmcid), \
  dc.identifier.arxiv, \
  dc.identifier.issn, \
  dc.identifier.eissn, \
  dc.identifier.isbn, \
  dc.identifier.eisbn, \
  dc.subject, \
  dc.relation.ispartofseries, \
  dc.type, \
  dc.eprint.version, \
  dc.description.sponsorship, \
  dc.relation.url(link)
  
# Render identifiers as resolvable links
webui.resolver.1.urn = doi
webui.resolver.1.baseurl = http://dx.doi.org/
webui.resolver.2.urn = pmid
webui.resolver.2.baseurl = https://www.ncbi.nlm.nih.gov/pubmed/
webui.resolver.3.urn = pmcid
webui.resolver.3.baseurl = https://www.ncbi.nlm.nih.gov/pmc/

## Submission process settings
webui.submit.upload.required = false
